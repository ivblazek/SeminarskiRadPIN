@model Servis.Models.ServiceOrder

@{
    ViewData["Title"] = "Brisanje naloga";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="backgroundWhite">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="text-center">
            <h2>Jeste li sigurni da želite obrisati nalog @Html.DisplayFor(m => Model.Id)</h2>
            <br />
            <form method="post" asp-action="DeleteOrder">
                <div class="form-group row">

                    <div class="col-3"></div>
                    <div class="col-3">
                        <input type="submit" class="btn btn-danger form-control" asp-route-id="@Model.Id" value="Obriši" />
                    </div>
                    <div class="col-3">
                        <a class="btn btn-success form-control" asp-action="ServiceDetails" asp-route-id="@Model.Id">Odustani</a>
                    </div>
                    <div class="col-3"></div>
                </div>
            </form>
        </div>
    </div>