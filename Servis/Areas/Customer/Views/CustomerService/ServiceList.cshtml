@model IEnumerable<Servis.Models.ServiceOrder>
@{
    ViewData["Title"] = "Moji nalozi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="backgroundWhite">
        <div class=" row">
            <div class="col-6">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
        <hr />
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => Model.FirstOrDefault().Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model.FirstOrDefault().Item)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model.FirstOrDefault().RepairDesc)
                        </th>
                       
                        <th>
                            @Html.DisplayNameFor(m => Model.FirstOrDefault().Status)
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Item)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.RepairDesc)
                            </td>

                            <td class="bg-@Html.DisplayFor(m => item.GetColor)">
                                <a>@Html.DisplayFor(m => item.StatusDescription)</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Nema unesenih radnih naloga</p>
            }

        </div>
    </div>

