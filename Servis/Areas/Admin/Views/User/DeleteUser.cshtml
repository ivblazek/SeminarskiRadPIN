@model Servis.Models.AppUser

@{ ViewData["Title"] = "Brisanje kupca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="backgroundWhite">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="text-center">
        <h1>Brisanjem korisnika brišete sve njegove radne naloge</h1>
        <br />
         <br />
        <h2>Jeste li sigurni da želite obrisati "@Html.DisplayFor(m => Model.Name)"</h2>
        <br />
        <form method="post" asp-action="DeleteUser">
            <div class="form-group row">

                <div class="col-3"></div>
                <div class="col-3">
                    <input type="submit" class="btn btn-danger form-control" asp-route-id="@Model.Id" value="Obriši" />
                </div>
                <div class="col-3">
                    <a class="btn btn-success form-control" asp-action="UserList">Odustani</a>
                </div>
                <div class="col-3"></div>
            </div>
        </form>
    </div>
</div>