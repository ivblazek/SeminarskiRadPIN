@page
@using Servis.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Unos korisnika";
}

    <div class="backgroundWhite">
        <div class=" row">
            <div class="col-6">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
        <hr />
        <br />

        @if (User.IsInRole(SD.AdminUser) || false)
        {

            <div class="row">
                <div class="col"></div>
                <div class="col-md-4">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label>Naziv</label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Razina</label>
                            <select name="UserRole" class="form-control">
                                <option value="@SD.AdminUser">Administrator</option>
                                <option value="@SD.TechUser">Serviser</option>
                                <option value="@SD.CustomerUser">Korisnik</option>
                            </select>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-success form-contol">Unesi korisnika</button>
                        </div>
                    </form>
                </div>
                <div class="col"></div>
